<p id="notice"><%= notice %></p>

<h1>Requests</h1><br>

<table>
  <thead>
    <tr>
      <th>Status</th><br>
      <th>Branch</th><br>
      <th>Product</th><br>
      <th>Quantity</th>
      <th>Price</th>
      <th>Created at</th><br>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.status %></td>
        <td><%= request.branch_name %></td>
        <td><%= request.product_id %></td>
          <td><%= request.quantity_id %></td>
        <td><%= request.price %></td>
        <td><%= request.created_at %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

